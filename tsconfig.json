{
  "include": [
    "src",
    "vite.config.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ESNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/*": [ "./src/*" ],
    },
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "WebWorker"
    ],
    "noEmit": true,
    "allowJs": false,
    "composite": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
  },
}